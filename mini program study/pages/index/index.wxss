/* pages/index/index.wxss */

/* page标签是微信小程序自动为我们添加的一个根标签, 类似于html标签 */

page {
  height: 100%;
  background-color: #8ed145;
}

.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  /* 因为iPhone6下, 1rpx=1物理像素=.5px */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}

.username {
  font-size: 32rpx;
  /* 400是normal, 200 是变细了, 900是变粗了 */
  font-weight: 900;
  margin: 100rpx 0;
}

.goStudy {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #999;
}

button {
  font-size: 32rpx;
  border: 1px solid #999;
  background-color: #8ed145;
}
