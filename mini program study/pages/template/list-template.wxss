/* pages/template/list-template.wxss */

.listTmpContainer {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}

.listTmpContainer .avatar_date {
  padding: 10rpx;
}

.listTmpContainer .avatar_date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.listTmpContainer .avatar_date text {
  font-size: 32rpx;
}

.listTmpContainer .company {
  margin: 10rpx;
  font-size: 36rpx;
  font-weight: 900;
}

.listTmpContainer .contentImg {
  width: 100%;
  height: 460rpx;
}

.listTmpContainer .content {
  font-size: 32rpx;
  text-indent: 32rpx;
}

.listTmpContainer .collection_love image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.listTmpContainer .collection_love text {
  font-size: 28rpx;
  margin-right: 10rpx;
}
