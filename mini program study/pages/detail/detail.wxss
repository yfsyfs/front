/* pages/detail/detail.wxss */

.detailContainer {
  display: flex;
  flex-direction: column;
}

.detailContainer .headImg {
  width: 100%;
  height: 460rpx;
}

.detailContainer .avatar_date {
  padding: 10rpx;
}

.detailContainer .avatar_date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.detailContainer .avatar_date text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.detailContainer .company {
  font-size: 38rpx;
  font-weight: 900;
  margin-left: 10rpx;
}

.detailContainer .collection_share_container {
  position: relative;
}

.detailContainer .collection_share {
  float: right;
  margin-right: 50rpx;
}

.detailContainer .collection_share image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.detailContainer .line {
  width: 90%;
  height: 1rpx;
  background-color: #eee;
  margin: 0 auto;
  position: absolute;
  top: 45rpx;
  z-index: -1;
}

.detailContainer button {
  width: 280rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.detailContainer .content {
  font-size: 32rpx;
  text-indent: 32rpx;
  margin-top: 20rpx;
}

.detailContainer .musicImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
}
